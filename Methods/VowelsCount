// Create a method that receives a single string and prints out the number of vowels contained in it.
// Input: Text

namespace VowelsCount
{
    internal class Program
    {
        static void Main(string[] args)
        {
          string text = Console.ReadLine();

            Console.WriteLine(VowelsCount(text));
        } 
        static int VowelsCount (string text)
        {
            int count = 0;
            foreach (var item in text)
            {
                switch (item)
                {
                    case 'a': count++; break;
                    case 'e': count++; break;
                    case 'i': count++; break;
                    case 'o': count++; break;
                    case 'u': count++; break;
                    case 'y': count++; break;
                    case 'A': count++; break;
                    case 'E': count++; break;
                    case 'I': count++; break;
                    case 'O': count++; break;
                    case 'U': count++; break;
                    case 'Y': count++; break;
                }
            }
            return count;
        }
    }
}
